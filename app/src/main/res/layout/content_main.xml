<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main"
        tools:context=".MainActivity">

    <TextView
            android:text="Divisioni: "
            android:layout_width="82dp"
            android:layout_height="42dp"
            android:id="@+id/divisioni" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="33dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="56dp" android:textAlignment="viewStart"/>
    <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="137dp"
            android:layout_height="42dp"
            android:max="5"
            android:progress="4"
            android:id="@+id/seekBarLivelli" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="56dp" app:layout_constraintEnd_toStartOf="@+id/vittorie"
            android:layout_marginEnd="22dp"/>
    <TextView
            android:text="Vittorie: 0"
            android:layout_width="85dp"
            android:layout_height="43dp"
            android:id="@+id/vittorie" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="56dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="33dp"
            android:textAlignment="viewStart"/>
    <TextView
            android:text="Mosse: 0"
            android:layout_width="84dp"
            android:layout_height="42dp"
            android:id="@+id/mosse" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="33dp" android:layout_marginTop="49dp"
            app:layout_constraintTop_toBottomOf="@+id/divisioni" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="294dp"/>
    <Button
            android:text="Gioca"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:id="@+id/gioca" android:layout_marginEnd="52dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="52dp" app:layout_constraintTop_toBottomOf="@+id/vittorie"/>


    <view android:layout_width="0dp" android:layout_height="0dp"
          class="com.example.thesillygame.ScacchieraView"
          id="@+id/view" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
          app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
          android:layout_marginBottom="8dp"
          app:layout_constraintBottom_toBottomOf="parent"
          android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/gioca"
          android:id="@+id/scacchieraView"/>

</android.support.constraint.ConstraintLayout>